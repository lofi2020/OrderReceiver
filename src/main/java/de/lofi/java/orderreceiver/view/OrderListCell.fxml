<HBox fx:id="orderListCellHBox" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <FontAwesomeIconView fx:id="isNewIcon" icon="ICON_CIRCLE" textFill="#c8c8c8" />
    <GridPane fx:id="gridPane" alignment="CENTER_RIGHT" maxHeight="40" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label fx:id="fromLabel" text="From" textFill="#514e4e" />
            <Label fx:id="dateLabel" text="Date" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
            <Label fx:id="titleLabel" prefHeight="60.0" prefWidth="594.0" text="Title" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
        </children>
    </GridPane>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
